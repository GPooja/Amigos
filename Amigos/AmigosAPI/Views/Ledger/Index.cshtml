@model IEnumerable<AmigosAPI.Models.LedgerEntry>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntryType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GivenBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GivenTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GivenBy.DefaultCurrency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GivenTo.DefaultCurrency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
